

<section>
  <hr class="my-5" />

              <!-- Hoverable Table rows -->
              
              <div class="card mx-4">
                <h5 class="card-header">Banners List</h5>
                <div class="banner-list">
  {{#each banners}}
  <div class="banner-item">
    <!-- Display banner image -->
    <img class="p-3" src="{{this.images}}" style="height:300px; width:100%" alt="Banner Image">

    <!-- Button to delete the banner -->
    <form action="/admin/deleteBanner/{{this._id}}"  class="p-3">
      <button  type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to delete this banner?')">Delete</button>
    </form>
  </div>
  {{/each}}
</div>
              </div>
              
              <!--/ Hoverable Table rows -->

              <hr class="my-5" />
</section>

 

<!-- Assuming `banners` contains the array of banner objects -->


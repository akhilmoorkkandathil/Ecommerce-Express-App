<hr class="my-5" />

              <!-- Hoverable Table rows -->
              <div class="card mx-4">
                <h5 class="card-header">Categories</h5>
                <div class="table-responsive text-nowrap">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th> Category Name</th>
                        <th>Discount</th>
                        <th>Description</th>
                        <th>status</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      {{#each obj}}
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{this.name}}</strong></td>
                        {{#if this.discount}}
                        <td>{{this.discount}}%</td>
                        {{else}}
                          <td>_</td>
                        {{/if}}
                        <td>{{this.description}}</td>
                        <td>
                          {{#if this.status}}
                          <p>Listed</p>
                          {{else}}
                          <p>Unisted</p>
                          </td>
                          {{/if}}</td>
                        <td>
                          <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                              <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                              <a class="dropdown-item" href="/admin/catstatus/{{this._id}}?_method=PATCH" onclick="return confirm('Are you sure to change the status of {{this.name}}?')"
                                ><i class="bx bx-edit-alt me-1"></i> Change status</a
                              >
                              <a class="dropdown-item" href="/admin/editcategory/{{this._id}}"
                                ><i class="bx bx-edit-alt me-1"></i> Update category</a
                              >
                              <a class="dropdown-item" href="/admin/deletecategory/{{this._id}}?_method=DELETE" onclick="return confirm('Do you want to delete {{this.name}}?')"
                                ><i class="bx bx-trash me-1"></i> Delete</a
                              >
                            </div>
                          </div>
                        </td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Hoverable Table rows -->

              <hr class="my-5" />
<hr class="my-5" />

              <!-- Hoverable Table rows -->
              <div class="card mx-4">
                <h5 class="card-header">Orders</h5>
                <div class="table-responsive text-nowrap">
                  
                  {{#if orders}}
                  <table class="table table-hover" id="DataTable">
                    <thead>
                      <tr>
                        <th>OrderId</th>
                        <th>Username</th>
                        <th>Price</th>
                        <th>Address</th>
                        <th>Payment Methode</th>
                        <th>Status</th>
                        <th>OrderDate</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      {{#each orders}}
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>{{this.orderId}}</strong></td>
                        <td>{{this.userName}}</td>
                        <td>{{this.totalPrice}}</td>
                        <td>
                          {{this.shippingAddress.fname}} {{this.shippingAddress.lname}}<br>
                          {{this.shippingAddress.locality}}, {{this.shippingAddress.city}}<br>
                          Phone: {{this.shippingAddress.phone}},<br> 
                          Alt Phone: {{this.shippingAddress.altphone}}<br>
                          Pincode: {{this.shippingAddress.pincode}}, <br>
                          Landmark: {{this.shippingAddress.landmark}}
                        </td>
                        <td>{{this.paymentMethod}}</td>
                        <td><span class="badge bg-label-primary me-1">{{this.status}}</span></td>
                        <td>{{this.createdAt}}</td>
                        <td>
                            <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                              <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                              <a class="dropdown-item" href="shipped/{{this.orderId}}?_method=PATCH">
                              {{#if (eq this.status 'pending')}}
                              <i class="bx bx-edit-alt me-1"></i> Shipped
                              {{else if (eq this.status 'Shipped')}}
                              <i class="bx bx-edit-alt me-1"></i> Delivered
                              
                              {{/if}}
                              </a>
                             
                              
                              <a class="dropdown-item" href="/admin/myOrders/{{this.orderId}}"
                                ><i class="bx bx-eye me-1"></i> View</a
                              >
                            </div>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                  {{else}}
                  <h5 class="ml-5">No Orders Yet!</h5>
                  {{/if}}
                </div>
              </div>
              
              <!--/ Hoverable Table rows -->
{{#if pages}}
                <div class="container mt-3">
                    <div class="row">
                        <div class="col-12">
                            <!-- Start Column 1 -->
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    
                                    <li class="page-item d-flex">
                                        <a class="page-link" href="orders?page={{prev}}" >
                                            <div class="page-box"> < </div>
                                            
                                        </a>
                                        {{#each pages}}
                                        <a class="page-link text-primary " href="orders?page={{this}}" data-page="{{this}}">
                                            
                                            
                                            <div class="page-box">{{this}}</div>
                                            
                                        </a>
                                        {{/each}}
                                        <a class="page-link" href="orders?page={{next}}" >
                                            <div class="page-box"> > </div>
                                            
                                        </a>
                                        
                                    </li>
                                    
                                   
                                </ul>
                            </nav>
                            <!-- End Column 1 -->
                        </div>
                    </div>
                </div>
                {{/if}}
              <hr class="my-5" />


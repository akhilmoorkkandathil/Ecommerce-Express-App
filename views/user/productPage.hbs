<section>
    <!-- Start Hero Section -->
    <div class="hero">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-5">
                    <div class="intro-excerpt">
                        <h1>Product Details</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Hero Section -->

    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-lg-6">
                <div class="img-container">
                    <img class="product-image" id="mainImage" src="{{this.images.[0]}}" alt="Product Image">
                </div>

                <div class="thumbnail-container">
                    {{#each this.images}}
                    <img class="thumbnail" src="{{this}}" alt="Thumbnail Image">
                    {{/each}}
                </div>
                <div class="button-container">
                    <a href="/add-to-cart/{{this._id}}"><button class="add-to-cart">Add to Cart</button></a>
                    <a href=""><button class="buy-now">Buy Now</button></a>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="product-details">
                    <h2>{{this.name}}</h2>
                    <p class="product-description">{{this.description}}</p>
                    <p class="product-price">Price: {{this.price}}</p>
                    <div class="coupon-offers">
                        <h4>Available Coupons</h4>
                        <ul>
                            <li>Coupon 1: 10% off</li>
                            <li>Coupon 2: Free shipping</li>
                            <!-- Add more offers if needed -->
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script>
        // Get all thumbnail images and main product image
        const thumbnails = document.querySelectorAll('.thumbnail');
        const mainImage = document.getElementById('mainImage');
        const imgContainer = document.querySelector('.img-container');

        // Function to handle image click
        thumbnails.forEach(thumbnail => {
            thumbnail.addEventListener('click', function() {
                const imageURL = this.src; // Get the clicked thumbnail image URL
                mainImage.src = imageURL; // Set the main product image to the clicked thumbnail image
            });
        });

        var options = {
            width: 500,
            zoomWidth: 500,
            offset: { vertical: 100, horizontal: 300 },
            scale: 0.4
        };

        new ImageZoom(imgContainer, options);
    </script>
</section>
